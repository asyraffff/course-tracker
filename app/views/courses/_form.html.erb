<%= form_with(model: course) do |form| %>
  <% if course.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(course.errors.count, "error") %> prohibited this course from being saved:</h2>

      <ul>
        <% course.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :image_url %>
    <%= form.text_field :image_url %>
  </div>

  <div class="field">
    <%= form.label :url %>
    <%= form.text_field :url %>
  </div>

  <div class="field">
    <%= form.label :status %>
    <%= form.select :status , ['Upcoming', 'In Progress', 'Completed'] %>
  </div>

  <div class="field">
    <%= form.label :started %>
    <%= form.datetime_select :started %>
  </div>

  <div class="field">
    <%= form.label :completed %>
    <%= form.datetime_select :completed %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
